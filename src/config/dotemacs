;;;; Morten Brøns-Pedersens emacs initialization file (.emacs)

;; Enable a backtrace when errors occur
;; (setq debug-on-error t)

;; Set Emacs configuration directory (eg. where you keep your .el-files)
(let ((default-directory "/home/mortenbp/.emacs.d/"))

;; Add these to path
(load (expand-file-name "lisp/my-funs"))
(add-to-list 'load-path (expand-file-name "lisp/"))

;; Load config
(dolist (file
         (list
          "ido"
          "javascript"
          "latex"
          "sml"
          "matlab"
          "backup"
          "basic"
          "bindings"
          "bm"
          "fix-pgup-pgdn"
          "hippie-expand"
          "match-beginning"
          "org"
          )
         )
  (load (expand-file-name (concat "config/" file)))
  )
)

(custom-set-variables
  ;; custom-set-variables was added by Custom.
  ;; If you edit it by hand, you could mess it up, so be careful.
  ;; Your init file should contain only one such instance.
  ;; If there is more than one, they won't work right.
 '(TeX-view-program-selection (quote (((output-dvi style-pstricks) "dvips and gv") (output-dvi "xdvi") (output-pdf "Evince") (output-html "xdg-open"))))
 '(bm-annotate-on-create nil)
 '(bm-buffer-persistence t)
 '(bm-priority 10)
 '(haskell-program-name "ghci")
 '(org-log-done (quote time))
 '(safe-local-variable-values (quote ((TeX-master . t))))
 '(uniquify-buffer-name-style (quote post-forward) nil (uniquify))
 '(user-mail-address "f@ntast.dk"))

(put 'upcase-region 'disabled nil)

(custom-set-faces
  ;; custom-set-faces was added by Custom.
  ;; If you edit it by hand, you could mess it up, so be careful.
  ;; Your init file should contain only one such instance.
  ;; If there is more than one, they won't work right.
 '(bm-persistent-face ((((class color) (background light)) (:background "Light Blue"))))
 '(show-paren-match ((((class color) (background light)) (:background "Green")))))
(put 'downcase-region 'disabled nil)
